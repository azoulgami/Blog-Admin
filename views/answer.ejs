<%- include("./partials/header.ejs") %>
<style>.front::after{ display:none !important; }</style>/


    <div class="main">
        
        <form action="/answer" method="POST" class="answer-form">
        <label for="question">Question</label>
        <input
            id="question"
            name="question"
            type="text"
            placeholder="Enter the Question"
            required
            autocomplete="off"
         />

        <label for="answer">Answer</label>
        <textarea
            id="answer"
            name="answer"
            placeholder="Write your answer here..."
            rows="14"
            required
        ></textarea>

        <button style="background-color: green;" type="submit">Answer</button>
        </form>

    </div>
</div>
